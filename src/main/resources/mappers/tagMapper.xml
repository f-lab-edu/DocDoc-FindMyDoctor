<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="flab.docdoc.hospitalSubInfo.repository.TagRepository">

    <select id="countByHospitalUniqueId" parameterType="java.lang.Long" resultType="java.lang.Long" >
        SELECT COUNT(*)
        FROM tag
        WHERE hospital_unique_id = #{hospitalUniqueId}
    </select>
    <insert id="saveTags" parameterType="java.util.List" >
        INSERT INTO tag (
        hospital_unique_id,
        tag)
        VALUES
        <foreach collection="tags" item="item"  separator=",">
            (#{item.hospitalUniqueId},
            #{item.tag})
        </foreach>
    </insert>

    <delete id="deleteByHospitalUniqueId" parameterType="java.lang.Long">
        DELETE FROM tag
        WHERE hospital_unique_id = #{hospitalUniqueId}
    </delete>
</mapper>