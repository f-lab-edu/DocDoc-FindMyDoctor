<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="flab.docdoc.hospitalSubInfo.repository.HolidayRepository">


    <select id="countByHospitalUniqueId" parameterType="java.lang.String" resultType="java.lang.Integer" >
        SELECT COUNT(*)
            FROM holiday
            WHERE hospital_unique_id = #{hospitalUniqueId}
    </select>

    <insert id="saveHolidays" parameterType="java.util.List" >
        INSERT INTO holiday (
            hospital_unique_id,
            holiday)
        VALUES
        <foreach collection="holidays" item="item"  separator=",">
            (#{item.hospitalUniqueId},
            #{item.holiday})
        </foreach>
    </insert>

    <delete id="deleteByHospitalUniqueId" parameterType="java.lang.String">
        DELETE FROM holiday
            WHERE hospital_unique_id = #{hospitalUniqueId}
    </delete>
</mapper>